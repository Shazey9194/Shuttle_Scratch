{% extends "layout.html.twig" %}

{% block content %}
<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <h1><i class="fa-check"></i>&nbsp;Êtes-vous sûr ?</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <p>Êtes-vous sûr de vouloir <strong>{{ action|capitalize }}</strong> Cet élément ?</p>
            </div>
			<div class="form-group">
				<div class="col-lg-offset-2 col-lg-8">
					<div id="alertMsg" class="alert alert-info">Si vous confirmez, le changement sera définitif !</div>
				</div>
			</div>
        </div>
        <div class="row">
			<form method="post" action="{{ domain() }}{{ view }}/{{ id }}/delete"">
				<div class="form-group col-lg-offset-4 col-lg-4" style="text-align: center;">
					<input type="submit" name="confirm" value="Confirmer" class="btn btn-primary btn-lg" />
				</div>
			</form>
		</div>
        <div class="row">
            <div class="form-group col-xs-12" style="text-align: center;">
                Retour sur <a href="{{ [domain(),view]|join('') }}" class="dynamic">{{ view|capitalize }}</a>
            </div>
		</div>
        <div class="row">
            <div class="form-group col-xs-12" style="text-align: center;">
                Besoin d'aide ? <a href="/help" class="dynamic">Contacter le support</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block extras %}
<div id="home-demo">
</div>
{% endblock %}