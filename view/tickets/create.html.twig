{% extends "layout.html.twig" %}

{% set navtab = 'new' %}

{% block content %}
<div class="container">
    <div class="row">
        <form role="form" method="post">
            <div class="col-md-9">
                <section class="well">
                    <h3>Nouveau ticket</h3>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="title">Intitulé</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{ setValue('title') }}" placeholder="Nouveau ticket">
                            {{ formError('title') }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="type">Type de demande</label>
                            <select class="form-control" id="type" name="type">
                                <option value="">Choisir un type</option>
                                {% for type in types %}
                                <option value="{{ type.idTicketType }}" {{ set_select('type', type.idTicketType) }}>{{ type.label|capitalize }}</option>
                                {% endfor %}
                            </select>
                            {{ formError('type') }}
                        </div>
						{% if isGranted('admin') or isGranted('team') %}
                        <div class="form-group col-md-2">
                            <label for="level">Importance</label>
                            <select class="form-control" id="level" name="level">
                                <option value="5">Urgent</option>
                                <option value="4">Haut</option>
                                <option value="3" selected>Normal</option>
                                <option value="2">Bas</option>
                                <option value="1">Négligeable</option>
                            </select>
                        </div>
						{% endif %}
                    </div>
                    <div class="form-group">
                        <label for="content">Détail</label>
                        <textarea class="form-control" id="content" name="content" rows="12"></textarea>
                    </div>
					{% if isGranted('admin') or isGranted('team') %}
                    <fielset>
                        <legend>Temporalité</legend>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label for="startDate">Date de debut</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="startDate" name="startDate">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default"><i class="fa-calendar-o"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="deadline">Date de fin</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="deadline" name="deadline">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default"><i class="fa-calendar-o"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="estimatedTime">Temps estimé</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="estimatedTime" name="estimatedTime">
                                    <span class="input-group-addon">Jours</span>
                                </div>
                            </div>
                        </div>
                    </fielset>
					{% endif %}
                    <button type="submit" class="btn btn-primary">{% if isGranted('admin') or isGranted('team') %} Ajouter {% else %} Soumettre {% endif %}</button>
                </section>
            </div>
			{% if isGranted('admin') or isGranted('team') %}
            <div class="col-md-3">
                <section class="well">
                    <h3>Projet</h3>
					<label for="type">Projet associé</label>
					<select class="form-control" id="type" name="idProjet">
						<option value="">Choisir un projet</option>
						{% for projet in projets %}
						<option value="{{ projet.idProject }}" {{ set_select('idProjet', projet.idProject) }}>{{ projet.name|capitalize }}</option>
						{% endfor %}
					</select>
					{{ formError('idProjet') }}
                </section>

                <section class="well">
                    <h3>Equipe</h3>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Assigné à</label>
                        <select class="form-control" id="exampleInputPassword1" name="assignedTo">
                            <option value="">Choisir un membre d'équipe</option>
							{% for teamMember in teams %}
							<option value="{{ teamMember.idUser }}" {{ set_select('assignedTo', teamMember.idUser) }}>{{ [teamMember.lastname|capitalize, teamMember.firstname|capitalize]|join(' ') }}</option>
							{% endfor %}
						</select>
						{{ formError('assignedTo') }}
                        </select>
                    </div>
                </section>
            </div>
			{% endif %}
        </form>
    </div>
</div>
{% endblock %}