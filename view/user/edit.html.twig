{% extends "user/users.html.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <section class="well">
                <h3>Modifier un utilisateur</h3>
                <form id="edit-user" role="form" method="post"> 
                    <input type="hidden" name="idUser" value="{{ user.idUser }}">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" {{ setValue('email', user.email) }} placeholder="account@acme.com" maxlength="255" disabled>
                            {{ formError('email') }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" {{ setValue('firstname', user.firstname) }} placeholder="Prénom" maxlength="45">
                            {{ formError('firstname') }}
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" {{ setValue('lastname', user.lastname) }} placeholder="Nom" maxlength="45">
                            {{ formError('lastname') }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="roles">Roles</label>
                            <select class="form-control" id="roles" name="roles[]" multiple>
                                <option value="client" {{ set_select('roles[]', 'client', 'client' in user.roles) }}>Client</option>
                                <option value="team" {{ set_select('roles[]', 'team', 'team' in user.roles) }}>Equipe</option>
                                <option value="admin" {{ set_select('roles[]', 'admin', 'admin' in user.roles) }}>Admin</option>
                            </select>
                            {{ formError('roles[]') }}
                        </div>
                    </div>
            </section>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-lg btn-block btn-primary">Sauvegarder</button>
        </div>
    </div>
</div>
{% endblock %}