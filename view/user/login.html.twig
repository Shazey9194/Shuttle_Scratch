{% extends "layout.html.twig" %}

{% block navbar %}
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
                <span class="sr-only">Afficher la navigation</span>
                <span class="fa-reorder"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navigation">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="#">RSS&nbsp;<i class="fa-rss"></i></a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="login" class="dynamic"><i class="fa-sign-in"></i>&nbsp;Connexion</a></li>
                <li><a href="register" class="dynamic"><i class="fa-pencil-square-o"></i>&nbsp;S'inscrire</a></li>
            </ul>
        </div>
    </div>
</nav>
{% endblock %}

{% block subnavbar %}{% endblock %}

{% block content %}
<div class="container">
    <form id="login-form" class="huge-form" method="post">
        <div class="jumbotron col-md-offset-2 col-md-8">
            <h1><i class="fa-rocket"></i>&nbsp;Shuttle</h1>
        </div>
        <div class="row">
            <div class="form-group col-md-offset-2 col-md-4">
                <input type="email" name="email" value="{{ set_value('email')|raw }}" class="form-control input-lg" placeholder="Email" required>
                {{ form_error('email')|raw }}
            </div>
            <div class="form-group col-md-4">
                <input type="password" name="password" value="{{set_value('password')|raw }}" class="form-control input-lg" placeholder="Mot de passe" required>
                {{ form_error('password')|raw }}
            </div>
        </div>

        {% if error is defined %}
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div class="input-error row-error">{{ error }}</div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="form-group col-sm-offset-4 col-sm-4">
                <button type="submit" class="btn btn-lg btn-block btn-primary">Connexion</button>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-12" style="text-align: center;">
                Vous n'avez pas de compte ? <a href="register" class="dynamic">Inscrivez-vous</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}